<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="@dimen/constraint_layout_padding_start"
    android:paddingTop="@dimen/constraint_layout_padding_start"
    android:paddingEnd="@dimen/constraint_layout_padding_end"
    tools:context=".views.ProfileScreenFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_profile"
        android:layout_width="@dimen/profile_image_width"
        android:layout_height="0dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintDimensionRatio="1,1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/circular_profile" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/profile_image_margin_start_20"
        android:text="@string/first_name"
        android:textColor="@color/black"
        android:textSize="@dimen/product_title_size"
        app:layout_constraintStart_toEndOf="@id/image_profile"
        app:layout_constraintTop_toTopOf="@id/image_profile" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profile_email_margin_top"
        android:text="@string/email"
        android:textSize="@dimen/product_detail_text_size"
        app:layout_constraintStart_toStartOf="@id/profile_name"
        app:layout_constraintTop_toBottomOf="@id/profile_name" />

    <ImageButton
        android:id="@+id/profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/profile_edit_margin_start"
        android:background="@android:color/transparent"
        android:padding="@dimen/default_padding_8"
        android:src="@drawable/ic_edit_pencil"
        app:layout_constraintBottom_toBottomOf="@id/profile_name"
        app:layout_constraintStart_toEndOf="@id/profile_name"
        app:layout_constraintTop_toTopOf="@id/profile_name" />

</androidx.constraintlayout.widget.ConstraintLayout>