<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.GalleryFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_from_gallery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_both_side"
        android:background="@drawable/shape_product_border_background"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_open_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/save_message_margin_end"
        android:layout_marginBottom="@dimen/save_message_margin_bottom"
        android:background="@drawable/shape_add_product"
        android:backgroundTint="@color/secondary_color"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toTopOf="@id/btn_pick_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_pick_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/save_message_margin_end"
        android:layout_marginBottom="@dimen/save_message_margin_bottom"
        android:background="@drawable/shape_add_product"
        android:backgroundTint="@color/secondary_color"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_add_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>