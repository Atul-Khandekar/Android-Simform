<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="calculatorData"
            type="com.example.trainingproject.models.CalculatorDataModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16dp"
        android:background="@drawable/shape_number_textfield"
        android:layout_margin="@dimen/card_margin"
        app:cardCornerRadius="@dimen/calculator_card_radius"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/bottom_padding">

        <TextView
            android:id="@+id/label_first_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_both_side"
            android:layout_marginTop="@dimen/field_margin_top"
            android:text="@string/text_view_first_number"
            android:textColor="@color/black"
            android:textSize="@dimen/field_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_second_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/field_margin_top"
            android:text="@string/text_view_second_number"
            android:textColor="@color/black"
            android:textSize="@dimen/field_text_size"
            app:layout_constraintStart_toStartOf="@id/second_number"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@id/first_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/field_height"
            android:layout_marginTop="@dimen/input_field_margin_6"
            android:background="@drawable/shape_number_textfield"
            android:hint="@string/first_number"
            android:maxLength="10"
            android:padding="@dimen/default_padding_8"
            android:text="@={calculatorData.number1}"
            android:textColor="@color/black"
            android:inputType="number"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@id/label_first_number"
            app:layout_constraintTop_toBottomOf="@id/label_first_number" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/second_number"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/input_field_margin_6"
            android:layout_marginEnd="@dimen/margin_both_side"
            android:background="@drawable/shape_number_textfield"
            android:hint="@string/second_number"
            android:inputType="number"
            android:maxLength="10"
            android:padding="@dimen/default_padding_8"
            android:text="@={calculatorData.number2}"
            android:textColor="@color/black"
            app:layout_constraintBaseline_toBaselineOf="@+id/first_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_second_number"
            android:textAlignment="center"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_multiply"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_multiply_image"
            app:layout_constraintEnd_toStartOf="@id/second_number"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/first_number"
            app:layout_constraintTop_toTopOf="@id/first_number" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_aaddition"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_addition"
            app:layout_constraintEnd_toEndOf="@+id/btn_multiply"
            app:layout_constraintHeight_percent="0.11"
            app:layout_constraintStart_toStartOf="@id/btn_multiply"
            app:layout_constraintTop_toBottomOf="@id/btn_multiply" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/numbers_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_number_textfield"
            android:maxHeight="200dp"
            android:padding="@dimen/default_padding_8"
            app:layout_constraintEnd_toEndOf="@id/btn_aaddition"
            app:layout_constraintStart_toStartOf="@id/btn_aaddition"
            app:layout_constraintTop_toBottomOf="@id/btn_aaddition"
            tools:itemCount="2"
            tools:listitem="@layout/spinner_row_item"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_numbers"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_number_textfield"
            android:padding="@dimen/default_padding_8"
            android:text="Add number"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/numbers_recycler_view"
            app:layout_constraintStart_toStartOf="@id/numbers_recycler_view"
            app:layout_constraintTop_toBottomOf="@+id/numbers_recycler_view" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_onclick_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/image_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/shape_number_textfield"
            android:padding="@dimen/default_padding_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_add_numbers"
            tools:itemCount="1"
            tools:listitem="@layout/image_row_item" />

        <TextView
            android:id="@+id/label_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/result_margin_top_16"
            android:text="@string/text_view_result"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/image_recycler_view"
            app:layout_constraintTop_toBottomOf="@id/image_recycler_view" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/result"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/input_field_margin_6"
            android:background="@drawable/shape_number_textfield"
            android:text="@={calculatorData.result}"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/label_result"
            app:layout_constraintTop_toBottomOf="@+id/label_result"
            android:textAlignment="center"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_image"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/input_field_margin_6"
            android:background="@drawable/shape_number_textfield"
            android:padding="8dp"
            android:text="Add Image"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/image_recycler_view"
            app:layout_constraintTop_toBottomOf="@id/image_recycler_view"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>